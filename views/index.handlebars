<h1>Eat-Da-Burger!</h1>

<ul>
 {{#each burgers}}
 <li class="list{{id}}">
   <p>
   <div class="burgerIcon"></div>
   <div class="burgerName">{{this.burger_name}}</div>
     <div class="buttonDiv">
       <button data-burgerId="{{id}}" class="deleteBurger">Eat Burger!</button>
     </div>
   </p>
 </li>
 {{/each}}
</ul>

<h2>Create a burger</h2>
<form id="createBurger" class="button-size">
 <textarea type="text" name="burger"></textarea>
 <button type="submit">Save Burger!</button>
</form>

<h2>Update a burger</h2>
<form id="updateBurger" class="button-size">
 <select name="id">
        {{#each burgers}}
            <option value="{{this.id}}">{{this.burger_name}}</option>
        {{/each}}
    </select>
 <textarea type="text" name="burger" placeholder="burger"></textarea>
 <button type="submit">Update burger!</button>
</form>